{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./build",
    "strict": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test/**/*.ts"
  ]
}